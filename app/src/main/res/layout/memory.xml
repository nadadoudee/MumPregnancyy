<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/cc">

    <!-- Titre de la page Journal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Journal"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <!-- Zone de texte pour Ã©crire des mÃ©moires -->
    <EditText
        android:id="@+id/edtMemory"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="My memory"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_dark_background"
        android:gravity="top|start"
        android:inputType="textMultiLine" />

    <!-- Bouton pour enregistrer la mÃ©moire -->
    <Button
        android:id="@+id/btnSaveMemory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enregistrer le message ðŸŒ¸"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>