<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/cc1"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/sleep_tracker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Suivi de Sommeil de Bébé"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/start_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sleep_tracker_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="262dp"
        android:text="Heure de début du sommeil :"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_time_label"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/black"
        android:hint="Ex: 20:30"
        android:inputType="time"
        android:minHeight="48dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/end_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure de fin du sommeil :"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/start_time"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_time_label"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/black"
        android:hint="Ex: 08:00"
        android:inputType="time"
        android:minHeight="48dp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/save_sleep_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_time"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/green"
        android:text="Enregistrer le Sommeil"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/total_sleep_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/save_sleep_button"
        android:layout_marginTop="273dp"
        android:gravity="center"
        android:text="Durée totale du sommeil : 0h 0m"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>
